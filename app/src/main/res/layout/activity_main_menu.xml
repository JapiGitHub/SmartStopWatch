<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context="com.example.janne.smartstopwatch01.MainMenuActivity">

    <TextView
            android:text="0 : 0 : 0 . 00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_BasicStopwatch" android:textSize="65sp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold" android:textAllCaps="false" android:textColor="#000000"
            app:layout_constraintHorizontal_bias="0.517" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"/>

    <Button
            android:text="Reaction Timer"
            android:background="@drawable/roundedbuttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttReaction" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/tv_BasicStopwatch"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" android:textSize="39sp"
            android:fontFamily="sans-serif-condensed" app:layout_constraintHorizontal_bias="0.507"/>
    <Button
            android:text="Count REPs"
            android:background="@drawable/roundedbuttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttCountREPs"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.503"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/buttReactionHistory"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" android:textSize="39sp"
            android:fontFamily="sans-serif-condensed"/>
    <Button
            android:text="Round Timer"
            android:background="@drawable/roundedbuttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttSettings"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/buttCountHistory"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="39sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:text="v 0.888 beta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewVersion"
            android:fontFamily="monospace" android:textSize="12sp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
            android:text="Your progress"
            android:background="@drawable/roundedbuttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttReactionHistory"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/buttReaction"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" android:textSize="20sp"
            android:fontFamily="sans-serif-condensed" android:textColor="#777777"/>
    <Button
            android:text="Your progress"
            android:background="@drawable/roundedbuttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttCountHistory"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/buttCountREPs"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" android:textSize="20sp"
            android:fontFamily="sans-serif-condensed" android:textColor="#777777"/>
    <Button
            android:text="Start"
            android:background="@drawable/roundedbuttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/butt_start" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:layout_marginLeft="24dp" app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="#777777" android:fontFamily="sans-serif-condensed" android:textSize="30sp"
    />
    <Button
            android:text="Stop"
            android:background="@drawable/roundedbuttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/butt_stop"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:layout_marginRight="4dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" android:fontFamily="sans-serif-condensed"
            android:textSize="30sp"/>
    <Button
            android:text="reset"
            android:background="@drawable/roundedbuttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/butt_reset" app:layout_constraintRight_toLeftOf="@+id/butt_stop"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" android:textSize="30sp"
            android:fontFamily="sans-serif-condensed"/>


</android.support.constraint.ConstraintLayout>
