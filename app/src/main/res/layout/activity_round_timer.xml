<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.janne.smartstopwatch01.RoundTimerActivity">

    <TextView
            android:text="00 : 00 : 00 : 000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_RoundTimer" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="sans-serif-condensed" android:textSize="42sp" android:textStyle="bold"
            android:textColor="@android:color/background_dark" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <SeekBar
            android:layout_width="368dp"
            android:layout_height="wrap_content" android:id="@+id/sb_RoundTimer_Time"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_RoundTimer"
            android:layout_marginLeft="16dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp" android:progress="2" android:max="15"/>
    <TextView
            android:text="Round time in minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sb_Time" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sb_RoundTimer_Time" android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" android:fontFamily="sans-serif-condensed"
            android:textSize="18sp"/>
    <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_RoundTime"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sb_RoundTimer_Time"
            android:layout_marginRight="16dp" app:layout_constraintRight_toRightOf="parent" android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"/>
    <Button
            android:text="Start"
            android:background="@drawable/roundedbuttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/butt_RoundTimerStart" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_sb_Time" android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" android:textSize="30sp"
            />
</android.support.constraint.ConstraintLayout>
