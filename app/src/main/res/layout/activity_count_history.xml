<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.janne.smartstopwatch01.CountHistoryActivity">

    <TextView
            android:text="Counter progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_counterHistoryInfo" android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#5b605f" android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp" android:fontFamily="sans-serif-condensed" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="All time cumulative repetitions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/tv_counterHistoryInfo"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.501" android:fontFamily="sans-serif-condensed"
            android:textColor="#5b605f"/>
    <com.jjoe64.graphview.GraphView
            android:layout_width="368dp"
            android:layout_height="150dp"
            android:id="@+id/CountHistoryGraph"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginTop="7dp"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>
    <Button
            android:background="@drawable/roundedbuttons"
            android:text="Reset History"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_ResetCountHistory"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:fontFamily="sans-serif-condensed" android:textAllCaps="false" android:textSize="24sp"
            android:textColor="#5b605f"/>
</android.support.constraint.ConstraintLayout>
