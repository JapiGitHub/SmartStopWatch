<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.janne.smartstopwatch01.CounterActivity">

<TextView
        android:text="info  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_info"
        android:layout_marginRight="32dp" app:layout_constraintRight_toRightOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat" android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttReactionStart"
        android:fontFamily="sans-serif-condensed"/>
<Button
        android:text="Calibrate"
        android:background="@drawable/roundedbuttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttReactionCalibration"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" android:layout_marginStart="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"/>
<Button
        android:text="Start"
        android:background="@drawable/roundedbuttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/buttReactionStart"
        android:layout_marginRight="16dp" app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp" android:layout_marginEnd="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Count"
            android:fontFamily="sans-serif-condensed" android:textSize="150sp" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_info2" android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent" android:textColor="#000000"/>
    <TextView
        android:text="History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHistory"
        android:fontFamily="sans-serif-condensed" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sb_Threshold" android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"/>
<com.jjoe64.graphview.GraphView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:id="@+id/graph" tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_info"/>
<SeekBar
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/sb_waitNextHit" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/graph" android:max="20" android:progress="3"
        android:layout_marginLeft="16dp" app:layout_constraintLeft_toLeftOf="parent"/>
    <SeekBar
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/sb_Threshold" android:max="32000" android:progress="1500"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_info1"
            android:layout_marginLeft="16dp" app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
            android:text="How long to wait until next hit can be recognized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_info1"
            app:layout_constraintTop_toBottomOf="@+id/sb_waitNextHit"
            android:fontFamily="sans-serif-condensed" android:layout_marginTop="0dp" android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
<TextView
        android:text="threshold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_info2"
        app:layout_constraintTop_toBottomOf="@+id/sb_Threshold" android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="0dp" android:layout_marginLeft="16dp" app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
            android:text="Reset"
            android:background="@drawable/roundedbuttons"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/butt_Reset" app:layout_constraintRight_toLeftOf="@+id/buttReactionStart"
            android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"/>
</android.support.constraint.ConstraintLayout>
