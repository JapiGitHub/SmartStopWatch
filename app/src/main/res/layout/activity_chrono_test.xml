<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.janne.smartstopwatch01.chronoTest">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_weight="10" android:layout_gravity="center_horizontal"
            android:id="@+id/linearLayout">
        <Chronometer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ChronoView" android:format="HH:MM:SS"/>
        <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_Start"/>
        <TextView
                android:text="lol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/linearLayout" android:layout_marginStart="50dp"
                android:layout_marginTop="52dp"
                android:id="@+id/textView8" android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>
